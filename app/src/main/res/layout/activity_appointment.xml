<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    android:orientation="vertical"
    tools:context=".appointment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="104dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/opensanssemibold"
                    android:gravity="center"
                    android:text="@string/reserve"
                    android:textAllCaps="true"
                    android:textSize="26sp"

                    />

                <Button
                    android:layout_width="155dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/card"
                    android:text="@string/pickdate"
                    android:textColor="@color/primary_black"
                    android:textSize="15dp"


                    app:backgroundTint="@color/secondary_blue" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="170dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <RadioButton
                        android:buttonTint="@color/secondary_blue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5sp"
                        android:paddingStart="30dp"
                        android:paddingLeft="20dp"
                        android:paddingEnd="30dp"
                        android:paddingRight="30dp"
                        android:text="@string/time1"
                        android:textColor="@color/primary_black"
                        android:textColorHint="@color/secondary_blue"
                        android:textStyle="bold" />


                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/secondary_blue"
                        android:checked="false"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/time2"
                        android:textColor="@color/primary_black"
                        android:textColorHint="@color/secondary_blue"
                        android:textStyle="bold" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/secondary_blue"
                        android:checked="false"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/time3"
                        android:textColor="@color/primary_black"
                        android:textColorHint="@color/secondary_blue"
                        android:textStyle="bold" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/secondary_blue"
                        android:checked="false"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/time4"
                        android:textColor="@color/primary_black"
                        android:textStyle="bold" />


                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35sp"
                    android:layout_marginTop="315dp"
                    android:text="@string/Advancepayment"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="78dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="310dp"
                    android:background="@drawable/card"
                    android:text="@string/AdvancePaymentbutton"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:backgroundTint="@color/primary_black" />

                <Button
                    android:layout_marginBottom="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/custombutton"
                    android:fontFamily="@font/opensansregular"
                    android:onClick="onClickCompletePayment"
                    android:text="@string/completepayment"
                    android:textColor="@color/primary_black"
                    android:textSize="20dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>