<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDetails"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/primary_orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_marginStart="15dp"
        android:background="@drawable/card"
        android:backgroundTint="@color/gray"
        android:padding="15sp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salonname"
            android:textSize="13sp"
            android:fontFamily="@font/opensanssemibold"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/salonNewName"
            android:fontFamily="@font/opensansbold"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textSize="13sp"
            android:fontFamily="@font/opensanssemibold"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/salonNewAddress"
            android:fontFamily="@font/opensansbold"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contactnumber"
            android:textSize="13sp"
            android:fontFamily="@font/opensanssemibold"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/salonNewContactNumber"
            android:fontFamily="@font/opensansbold"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Advancepayment"
            android:textSize="13sp"
            android:fontFamily="@font/opensanssemibold"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/salonNewAdvancePayment"
            android:fontFamily="@font/opensansbold"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="13sp"
            android:fontFamily="@font/opensanssemibold"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/salonNewPassword"
            android:fontFamily="@font/opensansbold"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            />
        <Button
            android:clickable="true"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="@string/update"
            android:backgroundTint="@color/primary_orange"
            android:background="@drawable/card"
            android:textColor="@color/white"
            android:letterSpacing=".1"/>
    </LinearLayout>
    <Button
        android:clickable="true"
        android:text="@string/deleteAccont"
        android:textSize="17sp"
        android:fontFamily="@font/opensansbold"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:background="@drawable/card"
        android:backgroundTint="@color/red"/>

</LinearLayout>