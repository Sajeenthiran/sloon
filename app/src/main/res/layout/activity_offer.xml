    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10sp"
        android:background="@drawable/card"
        android:backgroundTint="@color/gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoblack"
                android:text="10% OFF"
                android:textColor="@color/primary_black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensanssemibold"
                android:text="until - 2021/12/31"
                android:textColor="@color/primary_black"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/offerEdit"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@+id/delete"
            android:layout_toLeftOf="@+id/delete"
            android:background="@drawable/card"
            android:backgroundTint="@color/white"
            android:padding="3sp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/card"
            android:backgroundTint="@color/white"
            android:padding="3sp"
            android:src="@drawable/ic_baseline_delete_24" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="104dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="15sp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginVertical="10sp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="Offer Title"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/textView8"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/opensansbold"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_black"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="184dp"
                android:layout_height="51dp"
                android:layout_gravity="left"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="Offer Description"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/textView10"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/opensansbold"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/dark_black"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="184dp"
                android:layout_height="51dp"
                android:layout_gravity="left"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="Valid Until"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/card"
                android:fontFamily="@font/opensansbold"
                android:text="PICK DATE"
                app:backgroundTint="@color/secondary_blue" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/opensansbold"
                android:text="@string/add"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary_black" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>