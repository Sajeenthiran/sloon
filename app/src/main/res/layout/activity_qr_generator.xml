<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    android:orientation="vertical"
    tools:context=".QR_Generator">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="73dp"
        android:background="@color/primary_orange_dark">

        <ImageButton
            android:id="@+id/back_btn_in_qrGenerator"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/primary_orange_dark"
            android:tint="@color/white"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="189dp"
            android:layout_marginRight="189dp"
            android:fontFamily="@font/robotoblack"
            android:gravity="center_vertical"
            android:text="QR Generator"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="102dp" />

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary_orange">

            <Button
                android:id="@+id/btn_qrGenrator"
                android:layout_width="150sp"
                android:layout_height="43sp"
                android:layout_marginHorizontal="125sp"
                android:layout_marginVertical="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/card"
                android:backgroundTint="@color/primary_black"
                android:clickable="true"
                android:fontFamily="@font/opensansbold"
                android:text="Generate"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EEEEEE"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:paddingTop="50dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>